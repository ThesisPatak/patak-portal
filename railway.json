{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "restartPolicyCondition": "on-failure",
    "restartPolicyMaxRetries": 5,
    "environment": {
      "DATA_DIR": "/data"
    },
    "volumes": [
      {
        "name": "data",
        "mountPath": "/data"
      }
    ]
  }
}
